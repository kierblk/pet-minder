<div class="container">
  <header>
    <h1 class="logo logo-font">PetMinder</h1>
  </header>
  <div class="col-md-8 col-md-offset-2">
  
    <img class="logo-img" src="/images/pet-hotel.png">
    
    <div class="welcome">
      <p>Welcome to <span class="logo-font">PetMinder</span>, the app that keeps track of all your pets' care instructions.</p>

      <% if logged_in? %>
        <p>What would you like to do today?</p>
        <ul>
          <li><a href="/pets/new">Add a new pet</a></li>
          <li><a href="/users/<%= @user.id %>">List current pets</a></li>
          <li><a href="/users/<%= @user.id %>/edit">Edit your account</a></li>
        </ul>
      <% else %>
        <p><a class="pm-button" href="/users/new">Sign Up</a> &nbsp <a class="pm-button" href="/login">Log In</a>
      <% end %>
    </div>
  </div>
</div>
